
<h1>Weather</h1>

<div class="panel panel-primary m-t-10">
<div class="panel-heading">Weather Search</div>
<div class="panel-body">
  <div class="row">
  <div class="col-md-12">

    <%= form_with(url: "/dashboard/search", id: "search_city", method: "post") do %>
      <div class="form-group">
        <label for="usr">Search City:</label>
        <input type="text" class="form-control typeahead" name="city">
      </div>
    <% end %>

    <h1>Weather for <%= @weather.city %> <%= @weather.temperature[:celsius] %>&ordm; C </h1>

    <table class="table table-striped table-bordered table-condensed table-hover" >
    <tbody>
      <tr>
        <td>Pressure</td>
        <td><%= @weather.pressure %>hpa</td>
      </tr>
      <tr>
        <td>Humidity</td>
        <td><%= @weather.humidity %>%</td>
      </tr>
      <tr>
        <td>Min Temperature</td>
        <td><%= @weather.min_temperature %>&ordm;F</td>
      </tr>
      <tr>
        <td>Max Temperature</td>
        <td><%= @weather.max_temperature %>&ordm;F</td>
      </tr>
      <tr>
        <td>Wind Speed</td>
        <td><%= @weather.wind_speed %>mi/h</td>
      </tr>
        </tbody>
    </table>
  <div>
  </div>
</div>
</div>

<%= content_for :javascripts do %>
  <%= javascript_include_tag "pages/dashboard/index" %>
<% end %>

